# Backend Server Configuration
PORT=3000
NODE_ENV=production

# Security Configuration
# Comma-separated list of allowed origins for CORS (production)
# Example: https://phreshfoods.com,https://www.phreshfoods.com
ALLOWED_ORIGINS=https://phreshfoods.com,https://www.phreshfoods.com

# Development CORS (only used when NODE_ENV=development)
DEV_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000

# Rate Limiting Configuration
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Admin Authentication
# Generate a secure token: openssl rand -hex 32
ADMIN_TOKEN=your_secure_admin_token_here

# Google Maps API Keys
# Get from: https://console.cloud.google.com/google/maps-apis
# IMPORTANT: Restrict these keys in Google Cloud Console!
# - Backend key: Restrict by IP address (your server IP)
# - Frontend key: Restrict by HTTP referrer (your domain)
GOOGLE_API_KEY_BACKEND=your_backend_api_key_here
VITE_GOOGLE_MAPS_API_KEY=your_frontend_api_key_here

# Google Sheet URLs (published as CSV)
# In Google Sheets: File > Share > Publish to web > Choose "Comma-separated values (.csv)"
# Farm Stands sheet - contains farm stand locations and products
GOOGLE_SHEET_URL=https://docs.google.com/spreadsheets/d/YOUR_FARM_STANDS_SPREADSHEET_ID/pub?output=csv
# Cheese Shops sheet - contains cheese shop locations and products
GOOGLE_SHEET_URL_CHEESE_SHOPS=https://docs.google.com/spreadsheets/d/YOUR_CHEESE_SHOPS_SPREADSHEET_ID/pub?output=csv
# Fish Mongers sheet - contains fish monger locations and products
GOOGLE_SHEET_URL_FISH_MONGERS=https://docs.google.com/spreadsheets/d/YOUR_FISH_MONGERS_SPREADSHEET_ID/pub?output=csv
# Butchers sheet - contains butcher locations and products
GOOGLE_SHEET_URL_BUTCHERS=https://docs.google.com/spreadsheets/d/YOUR_BUTCHERS_SPREADSHEET_ID/pub?output=csv
# Antique Shops sheet - contains antique shop locations and products
GOOGLE_SHEET_URL_ANTIQUE_SHOPS=https://docs.google.com/spreadsheets/d/YOUR_ANTIQUE_SHOPS_SPREADSHEET_ID/pub?output=csv
# Breweries sheet - contains brewery locations and products
GOOGLE_SHEET_URL_BREWERIES=https://docs.google.com/spreadsheets/d/YOUR_BREWERIES_SPREADSHEET_ID/pub?output=csv
# Wineries sheet - contains winery locations and products
GOOGLE_SHEET_URL_WINERIES=https://docs.google.com/spreadsheets/d/YOUR_WINERIES_SPREADSHEET_ID/pub?output=csv
# Sugar Shacks sheet - contains sugar shack locations and products
GOOGLE_SHEET_URL_SUGAR_SHACKS=https://docs.google.com/spreadsheets/d/YOUR_SUGAR_SHACKS_SPREADSHEET_ID/pub?output=csv

# Data Refresh Settings
DATA_REFRESH_SCHEDULE=1 * * * *
MAX_DATA_FILE_AGE_HOURS=4

# Cache Management
ALLOW_CACHE_FLUSH=true
